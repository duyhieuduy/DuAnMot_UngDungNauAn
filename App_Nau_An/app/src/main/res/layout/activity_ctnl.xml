<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#6FB28BDF"
    tools:context=".CTNLActivity">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/imgCTNL"
                    android:layout_width="match_parent"
                    android:layout_height="190dp"
                    android:src="@mipmap/ic_launcher" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/cv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="150dp"
                    app:cardCornerRadius="50dp">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                                <TextView
                                    android:textColor="#55278A"
                                    android:id="@+id/MOXT"
                                    android:textSize="30dp"
                                    android:textStyle="bold"
                                    android:layout_marginLeft="40dp"
                                    android:layout_marginRight="40dp"
                                    android:layout_marginTop="30dp"
                                    android:text="Mực Ống Xào Măng Trúc"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"/>

                                <TextView
                                    android:layout_centerHorizontal="true"
                                    android:id="@+id/GT"
                                    android:textSize="16dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/MOXT"
                                    android:layout_marginLeft="30dp"
                                    android:layout_marginRight="30dp"
                                    android:hint="Lời nói chẳng mất tiền mua,
                                    vậy tại sao chúng ta không dành một lời
                                    kích lệ cho ngườinấu ăn để họ vui hơn và
                                    dốcsức nấu ăn ngon hơn phải không?" />


                                <ImageView
                                    android:layout_marginLeft="40dp"
                                    android:id="@+id/DH"
                                    android:layout_below="@+id/GT"
                                    android:src="@drawable/clock"
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"/>
                                <TextView
                                    android:layout_marginLeft="5dp"
                                    android:layout_marginTop="10dp"
                                    android:text="40 phút"
                                    android:layout_toRightOf="@+id/DH"
                                    android:layout_below="@+id/GT"
                                    android:id="@+id/textTG"
                                    android:layout_width="100dp"
                                    android:layout_height="20dp"/>


                                <ImageView
                                    android:id="@+id/imgnl"
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:layout_below="@+id/DH"
                                    android:layout_marginStart="40dp"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginBottom="10dp"
                                    android:src="@drawable/clock"
                                    android:textSize="15dp" />
                                <TextView
                                    android:layout_marginTop="20dp"
                                    android:layout_marginLeft="5dp"
                                    android:layout_toRightOf="@+id/imgnl"
                                    android:layout_below="@+id/DH"
                                    android:id="@+id/TennL1"
                                    android:text="1 con mực"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>

                                <TextView
                                    android:layout_marginTop="20dp"
                                    android:layout_marginLeft="5dp"
                                    android:layout_below="@+id/DH"
                                    android:layout_toRightOf="@id/TennL1"
                                    android:id="@+id/TennL2"
                                    android:text="100gr măng tươi"
                                    android:layout_width="106dp"
                                    android:layout_height="wrap_content"/>


                                <TextView
                                    android:textColor="#55278A"
                                    android:textStyle="bold"
                                    android:id="@+id/clNl"
                                    android:textSize="30dp"
                                    android:layout_marginLeft="40dp"
                                    android:layout_marginRight="40dp"
                                    android:text="Cách Làm"
                                    android:layout_below="@+id/imgnl"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"/>
                                <TextView
                                    android:id="@+id/ctcl"
                                    android:layout_marginLeft="30dp"
                                    android:layout_marginRight="30dp"
                                    android:hint="Sơ chế mực và măng, Ướp mực, Xào mực với măng tươi. Cắt mực thành nhiều khoanh 1-2 lóng tay. Chần sơ măng tươi để loại bỏ bụi bẩn, 1 muỗng cà phê hành tím, 1 muỗng cà phê tỏi băm,1 muỗng cà phê bột nêm, 1 muỗng cà phê tiêu ướp 15 phút.Cho vào chảo 2 muỗng dầu ăn,1 muỗng cà phê hành tím, 1 muỗng cà phê tỏi băm phi thơm"
                                    android:layout_below="@+id/clNl"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"/>
                                <ImageView

                                    android:id="@+id/imgcl1"
                                    android:layout_marginStart="30dp"
                                    android:layout_marginLeft="10dp"
                                    android:layout_below="@+id/ctcl"
                                    android:src="@mipmap/ic_launcher"
                                    android:layout_width="150dp"
                                    android:layout_height="190dp"/>
                                <ImageView
                                    android:id="@+id/imgcl2"
                                    android:layout_marginStart="20dp"
                                    android:layout_below="@+id/ctcl"
                                    android:layout_toRightOf="@+id/imgcl1"
                                    android:src="@mipmap/ic_launcher"
                                    android:layout_width="150dp"
                                    android:layout_height="190dp"/>

                                <ImageView
                                    android:id="@+id/imgcl3"
                                    android:layout_width="match_parent"
                                    android:layout_height="160dp"
                                    android:layout_below="@+id/imgcl1"
                                    android:layout_marginStart="30dp"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginEnd="30dp"
                                    android:layout_marginBottom="70dp"
                                    android:src="@mipmap/ic_launcher" />


                        </RelativeLayout>


                </androidx.cardview.widget.CardView>
                <androidx.appcompat.widget.AppCompatButton
                    android:textStyle="bold"
                    android:text="Lưu Vào Ưa Thích"
                    android:textColor="@color/white"
                    android:layout_below="@id/cv"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:background="@drawable/buttontronnvo"
                    android:layout_marginTop="-70dp"/>
        </RelativeLayout>



</ScrollView>