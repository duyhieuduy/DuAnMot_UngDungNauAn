<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CTNLActivity">
      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content">

              <ImageView
                  android:id="@+id/imgCTNL"
                  android:layout_width="match_parent"
                  android:layout_height="200dp"
                  android:src="@drawable/img" />

              <TextView

                  android:id="@+id/MOXT"
                  android:textSize="20dp"
                  android:layout_margin="10dp"
                  android:layout_below="@+id/imgCTNL"
                  android:text="Mực Ống Xào Măng Trúc"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"/>

              <TextView

                  android:id="@+id/GT"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_below="@+id/MOXT"
                  android:layout_margin="10dp"
                  android:hint="Lờinói chẳng mất tiền mua, vậy tại sao chúng ta không dành một lời kích lệ cho ngườinấu ăn để họ vui hơn và dốcsức nấu ăn ngon hơn phải không?" />

              <ImageView
                  android:id="@+id/linea"
                  android:layout_below="@+id/GT"
                  android:src="@drawable/linea"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"/>
              <ImageView

                  android:layout_centerHorizontal="true"
                  android:id="@+id/DH"
                  android:layout_below="@+id/linea"
                  android:src="@drawable/dongho"
                  android:layout_width="40dp"
                  android:layout_height="40dp"/>
              <TextView
                  android:layout_marginTop="10dp"
                  android:text="40 phút"
                  android:layout_toRightOf="@+id/DH"
                  android:layout_below="@+id/linea"
                  android:id="@+id/textTG"
                  android:layout_width="100dp"
                  android:layout_height="20dp"/>
              <ImageView
                  android:layout_below="@+id/DH"
                  android:id="@+id/linea1"
                  android:src="@drawable/linea"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"/>
              <TextView
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"/>

      </RelativeLayout>


</ScrollView>
