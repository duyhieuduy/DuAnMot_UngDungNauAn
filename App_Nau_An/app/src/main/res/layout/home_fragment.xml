<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kho cảm hứng"
        android:textSize="30dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/textKCH"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclviewKCH"
       android:layout_width="match_parent"
       android:layout_height="100dp"
        android:layout_below="@+id/textKCH"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclviewnewKCH"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@+id/recyclviewKCH"

        />
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:id="@+id/container"
        android:layout_below="@+id/recyclviewnewKCH"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add"
        android:id="@+id/btn"/>
    <Button
       android:layout_marginLeft="13dp"
        android:text="Chuyển"
        android:id="@+id/btnInsert"
        android:layout_toRightOf="@+id/textKCH"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    

