<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:layout_gravity="center_horizontal"
    android:background="@drawable/sreentitle"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="65dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/backbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="0dp"
            android:src="@drawable/ic_baseline_close_24" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:text="Thay đổi tài khoản"
            android:textColor="#F3EFEF"
            android:textSize="30sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/forwardbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="65dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/getin" />

    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="65dp"
        android:layout_marginTop="0dp"
        android:layout_marginRight="65dp"
        android:text="Tên đăng nhập"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold" />

    <EditText
        android:paddingLeft="10dp"
        android:id="@+id/edtTenDangNhap"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginLeft="65dp"
        android:layout_marginTop="0dp"
        android:layout_marginRight="65dp"
        android:background="@drawable/edittextbox"
        android:backgroundTint="#6DB28BDF" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="65dp"
        android:layout_marginTop="0dp"
        android:layout_marginRight="65dp"
        android:text="Mật khẩu"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold" />

    <EditText

        android:paddingLeft="10dp"
        android:id="@+id/edtMatKhau"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginLeft="65dp"
        android:layout_marginTop="0dp"
        android:layout_marginRight="65dp"
        android:background="@drawable/edittextbox"
        android:backgroundTint="#6DB28BDF" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="65dp"
        android:layout_marginTop="0dp"
        android:layout_marginRight="65dp"
        android:text="SĐT"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText

        android:paddingLeft="10dp"
        android:id="@+id/edtSDT"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginLeft="65dp"
        android:layout_marginTop="0dp"
        android:layout_marginRight="65dp"
        android:background="@drawable/edittextbox"
        android:backgroundTint="#6DB28BDF" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="65dp"
        android:layout_marginTop="0dp"
        android:layout_marginRight="65dp"
        android:text="Email"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold" />

    <EditText

        android:paddingLeft="10dp"
        android:id="@+id/edtEmail"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginLeft="65dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="65dp"
        android:background="@drawable/edittextbox"
        android:backgroundTint="#6DB28BDF" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="65dp"
        android:layout_marginTop="0dp"
        android:layout_marginRight="65dp"
        android:text="Địa chỉ"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold" />

    <EditText
        android:backgroundTint="#6DB28BDF"
        android:paddingLeft="10dp"
        android:id="@+id/edtDiaChi"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginLeft="65dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="65dp"
        android:background="@drawable/edittextbox"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="65dp"
        android:layout_marginTop="0dp"
        android:layout_marginRight="65dp"
        android:text="Tuổi"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText

        android:paddingLeft="10dp"
        android:id="@+id/edtTuoi"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginLeft="65dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="65dp"
        android:background="@drawable/edittextbox"
        android:backgroundTint="#6DB28BDF" />

    <TextView
        android:id="@+id/txtAlready"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:text="Got an account already ?"
        android:textColor="#073AE6"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/textwrong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:text="Confirm your password"
        android:textColor="#E60746"
        android:textSize="20sp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnUpdate"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/buttonlogin"
        android:text="Update"
        android:textColor="@color/white" />




</LinearLayout>